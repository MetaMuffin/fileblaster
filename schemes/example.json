{
    "customers": {
        "name": {
            "type": "string"
        },
        "surname": {
            "type": "string"
        },
        "age": {
            "type": "number",
            "contraints": {
                "min": 0,
                "max": 150
            }
        },
        "email": {
            "type": "string",
            "contraints": {
                "regex": "\\w+@\\w+\\.\\w+"
            }
        },
        "fruit": {
            "type": "string",
            "contraints": {
                "included": ["Apple", "Banana", "a"]
            }
        },
        "interests": {
            "type": "array",
            "array": {
                "type": "string",
                "contraints": {
                    "included": ["Programming", "Gaming", "Eating", "Sleep"]
                }
            }
        },
        "orders": {
            "type": "array",
            "array": {
                "type": "ref",
                "ref": {
                    "collection": "orders"
                }
            }
        }
    },
    "orders": {
        "customer": {
            "type":"ref",
            "ref": {
                "two-way": true,
                "collection": "customers"
            }
        },
        "article": {
            "type": "string"
        }
    }
}
